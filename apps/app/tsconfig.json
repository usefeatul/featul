{
  "extends": "@featul/tsconfig/nextjs.json",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "types": ["@cloudflare/workers-types/2023-07-01"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    ".next/types/**/*.ts",
    "next.config.ts",
    "sentry.server.config.ts",
    "sentry.edge.config.ts"
  ],
  "exclude": ["node_modules"]
}
